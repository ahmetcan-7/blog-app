{
    "info": {
        "_postman_id": "personal-blog-collection-id",
        "name": "Personal Blog API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Get Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/x-www-form-urlencoded",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "urlencoded",
                            "urlencoded": [
                                {
                                    "key": "grant_type",
                                    "value": "password",
                                    "type": "text"
                                },
                                {
                                    "key": "client_id",
                                    "value": "blog-api",
                                    "type": "text"
                                },
                                {
                                    "key": "username",
                                    "value": "admin",
                                    "type": "text"
                                },
                                {
                                    "key": "password",
                                    "value": "admin",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "http://localhost:8080/realms/personal-blog/protocol/openid-connect/token",
                            "protocol": "http",
                            "host": [
                                "localhost"
                            ],
                            "port": "8080",
                            "path": [
                                "realms",
                                "personal-blog",
                                "protocol",
                                "openid-connect",
                                "token"
                            ]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "  var json = pm.response.json();",
                                    "  pm.environment.set('token', json.access_token);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Create Post",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Sample Post\",\n  \"content\": \"This is a sample post.\"\n}"
                        }
                    }
                },
                {
                    "name": "Get All Posts",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Post By ID",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/posts/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                ":id"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Post By Slug",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/posts/slug/:slug",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                "slug",
                                ":slug"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Post",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                ":id"
                            ]
                        },
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Title\"\n}"
                        }
                    }
                },
                {
                    "name": "Delete Post",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/posts/:id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "posts",
                                ":id"
                            ]
                        }
                    }
                }
            ]
        },
