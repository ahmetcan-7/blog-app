{
    "name": "Auth",
    "item": [
        {
            "name": "Get Token",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/x-www-form-urlencoded",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "urlencoded",
                    "urlencoded": [
                        {
                            "key": "grant_type",
                            "value": "password",
                            "type": "text"
                        },
                        {
                            "key": "client_id",
                            "value": "blog-api",
                            "type": "text"
                        },
                        {
                            "key": "username",
                            "value": "admin",
                            "type": "text"
                        },
                        {
                            "key": "password",
                            "value": "admin",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "http://localhost:8080/realms/personal-blog/protocol/openid-connect/token",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "8080",
                    "path": [
                        "realms",
                        "personal-blog",
                        "protocol",
                        "openid-connect",
                        "token"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "if (pm.response.code === 200) {",
                            "  var json = pm.response.json();",
                            "  pm.environment.set('token', json.access_token);",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
    ]
}